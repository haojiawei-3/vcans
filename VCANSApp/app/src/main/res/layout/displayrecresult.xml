<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="@color/topRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/LinearLayout"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_alignParentLeft="true"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/imgback"
            android:background="@color/topRed"/>
        
         <TextView
             android:layout_centerInParent="true"
            android:id="@+id/tvActtitle1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="23dp"
            android:gravity="center_vertical"
            android:text="名片数据采集"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
         
      

        <TextView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tvNetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connecting"
            android:textColor="#ffffff"
            android:layout_marginRight="35dp"
            android:textSize="10dp"
            android:visibility="invisible" />

        <ImageButton
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imgNetStatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/connected2"
            android:text="@string/btn_reg" />
     </RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

    <LinearLayout
    
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"                   
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRZPlanId"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="公司名称" />

        <EditText
            android:id="@+id/company"                                      
            style="@style/txtStyle"
            android:onClick="onAction"
            android:layout_width="190dp" />

        
    </LinearLayout>

    <LinearLayout
  
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvRZFactoryId"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="姓名" />

        <EditText
            android:id="@+id/contact"
            style="@style/txtStyle"          
            android:layout_width="190dp" />
        <!-- android:onClick="onAction" --> 

    
    </LinearLayout>
    
    <LinearLayout
    
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRZPlanId"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="职位" />

        <EditText
            android:id="@+id/position"
            style="@style/txtStyle"
            android:layout_width="190dp" />
 <!-- android:onClick="onAction" --> 
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
           android:text="电话一"/>

        <EditText
            android:id="@+id/phone1"
            style="@style/txtStyle"         
            android:layout_width="190dp" />
         <!-- android:onClick="onAction" --> 

        
    </LinearLayout>
    
    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="电话二" />

       <EditText
            android:id="@+id/phone2"
            style="@style/txtStyle"        
            android:layout_width="190dp" />
 <!-- android:onClick="onAction" --> 
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="传真" />

       <EditText
            android:id="@+id/fax"
            style="@style/txtStyle"    
            android:layout_width="190dp" />
         <!-- android:onClick="onAction" --> 

        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="地址" />

      <EditText
            android:id="@+id/address"
            style="@style/txtStyle"
             android:onClick="onAction"
            android:layout_width="190dp" 
            />

       
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="网址" />

       <EditText
            android:id="@+id/www"
            style="@style/txtStyle"          
            android:layout_width="190dp" />
         <!-- android:onClick="onAction" --> 

       
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="电邮" />

        <EditText
            android:id="@+id/email"
            style="@style/txtStyle"
            android:layout_width="190dp" />
         <!-- android:onClick="onAction" --> 

     
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="95dp"
            android:text="备注" />

        <EditText
            android:id="@+id/note"
            style="@style/txtStyle"       
            android:layout_width="190dp" />
         <!-- android:onClick="onAction" --> 

    </LinearLayout>
   <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/imgBtnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_circle"
        android:src="@drawable/next_blue" />

    <TextView
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:text="上传名片"
        android:textSize="17dp"
        android:textColor="@android:color/black" />

</LinearLayout>
    </LinearLayout>
    </ScrollView>

    

</LinearLayout>