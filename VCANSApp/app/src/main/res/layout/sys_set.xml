<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
  
    <LinearLayout
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/topRed"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnBack"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:src="@drawable/imgback"
                android:textColor="#6666FF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvActtitle"
                android:layout_width="wrap_content"
                android:layout_height="55dp"               
                android:gravity="center"
                android:text="VCANS"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            
            <ImageButton
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/save" />
        </LinearLayout>
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/viewpage1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/ipAndPort"                  
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/txtTitle"
                    android:text="@string/ip" />

                <EditText
                    android:id="@+id/txtIp"
                    style="@style/txtStyle" />

                <Button
                    android:id="@+id/btnClearUser"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:text="X"
                    android:textColor="@android:color/black"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/txtTitle"
                    android:text="端口" />

                <EditText
                    android:id="@+id/txtPort"
                    style="@style/txtStyle"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/btnClearPwd"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:text="X"
                    android:textColor="@android:color/black"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTitle0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                     android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/picture"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView11"
                    style="@style/txtTitle"
                    android:layout_width="85dp"
                    android:text="@string/ReduceNumber" />

                <Spinner
                    android:id="@+id/dropReduceNumber"
                    style="@style/txtStyle"
                    android:layout_width="140dp" />

                <Button
                    android:id="@+id/btnClearUser1"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="KB"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView10"
                    style="@style/txtTitle"
                    android:layout_width="85dp"
                    android:text="@string/ReduceRate" />

                <Spinner
                    android:id="@+id/dropReduceRate"
                    style="@style/txtStyle"
                    android:layout_width="140dp" />

                <Button
                    android:id="@+id/btnClearUser0"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="X"
                    android:textColor="@android:color/black"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/chkCutPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/cutPhoto"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/other"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/chkEncrypto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:enabled="false"
                    android:visibility="gone"
                    android:text="@string/encrypto"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView20"
                    style="@style/txtTitle"
                    android:layout_width="wrap_content"
                    android:text=" 样品查询历史数" />

                <EditText
                    android:id="@+id/txtYPHistoryNum"
                    style="@style/txtStyle"
                    android:layout_width="90dp"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/btnClearPwd0"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:text="X"
                    android:textColor="@android:color/black"
                    android:visibility="invisible" />
            </LinearLayout>

           <LinearLayout
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal" >

              <!-- android:text=" 清除数据缓存"-->

                <TextView
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text=" 清除数据缓存"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                   />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/layCutRate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/dropCutType"
                    style="@style/txtTitle" />

                <Spinner
                    android:id="@+id/dropCutRate"
                    style="@style/txtStyle" />

                <Button
                    android:id="@+id/btnClearUser01"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:text="X"
                    android:textColor="@android:color/black"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewpage2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTitle001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/language"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rdBtnCh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chinese"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black" />

                    <RadioButton
                        android:id="@+id/rdBtnEn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/english"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTitle00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/about"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvVcans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="www.vcans.com"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />
                
                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/version"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvDeivceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/cpyDeviceName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />
           
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>

    <!--
         <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOk"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style"
            android:text="确定"
            android:textColor="@android:color/white" />
            </LinearLayout>
    -->

</LinearLayout>