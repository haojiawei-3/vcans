<com.vcans.tool.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sildingFinishLayout"
    android:background="#ffffff"
    tools:context=".MlqdActivity2" >
    
    <include
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />

   
     
   <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/include01"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/zt1"
            android:layout_width="55dp"
            android:layout_height="73dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/no_img"
            android:gravity="center" 
            android:scaleType="centerCrop"           
            android:textColor="@color/PIblue" />

       

        <Button
            android:id="@+id/xq"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:background="@drawable/tianjia"            
            android:text="详情" />

        <TextView
            android:id="@+id/pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/xq"
            android:layout_alignLeft="@+id/ph"
            android:text="品名"
            android:textColor="@color/black" />
        
         <TextView
            android:id="@+id/ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pm"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/zt1"
            android:text="品号"
            android:layout_marginTop="3dp"
            android:textColor="@color/black" />

    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#4c4c4c" />
    <ScrollView 
        android:layout_below="@+id/relativeLayout1"
        android:layout_above="@+id/hjw"
        android:layout_width="match_parent"
        android:id="@+id/ScrollView"
        android:layout_height="wrap_content">
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        
        android:orientation="vertical" >
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"        
    >
            <TextView
             android:id="@+id/TextView1"
             android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="描述一:" />
     <TextView
            android:id="@+id/msone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="一" />
         
</LinearLayout>
       
<LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="10dp"
    >
    <TextView
            android:id="@+id/TextView2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="描述二:" />
     
    <TextView
            android:id="@+id/mstow"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="二" />
</LinearLayout>

  <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="10dp"
    >
     <TextView
            android:id="@+id/TextView3"
             android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述三:" />
     
     <TextView
            android:id="@+id/msthree"  
              android:layout_marginRight="10dp"         
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="三" />
</LinearLayout>


  <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="10dp"
    >
     <TextView
            android:textStyle="bold"
            android:id="@+id/TextView1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息纲要:" />
     
     <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/gangyao"            
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信息纲要" />
</LinearLayout>

   <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="10dp"
    >
     <TextView
            android:textStyle="bold"
            android:id="@+id/TextView1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报表图片:" />
       <!-- android:scaleType="centerCrop" -->  
     <ImageView
            android:src="@drawable/no_img"          
            android:id="@+id/imageView"                        
            android:layout_gravity="center"
             
            android:layout_width="230dp"
            android:layout_height="230dp"/>
    </LinearLayout>

    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="20dp"
         android:orientation="vertical"
         android:layout_marginTop="10dp"
    >
     
</LinearLayout>

       
    </LinearLayout>
    </ScrollView>
     <!-- 
     android:background="@drawable/tianjia"  
      -->  
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"      
        android:layout_above="@+id/hjw"
        android:background="#FAFAFA" />
       
     <LinearLayout 
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/hjw"      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
   
        
          <!--   android:background="#FAFAFA" -->
            <RelativeLayout    
                android:id="@+id/RelativeLayoutqd"       
             android:layout_width="100dp"
             android:gravity="center"
             android:background="#FAFAFA"
             android:layout_height="50dp" > 
             
             
            <ImageButton
             android:id="@+id/qd"          
             android:textColor="#ffffff"             
             android:background="@drawable/gwc0"  
             android:gravity="center"          
             android:layout_width="32dp"
             android:layout_height="32dp"
             />
              <TextView
             android:id="@+id/hondian"             
             android:layout_width="11dp"
             android:layout_height="11dp"
             android:layout_marginLeft="-6dp"
             android:layout_marginRight="3dp"
             android:layout_alignTop="@+id/qd"
             android:layout_toRightOf="@+id/qd"
             android:gravity="center"
             android:text="0"
             android:visibility="gone"
             android:textSize="6sp"
             android:background="@drawable/shape1" />  
            
            </RelativeLayout>  

            
        <TextView
             android:id="@+id/sc"
             android:text="加入收藏车"
             android:textColor="#ffffff"
             android:layout_weight="1"
             android:background="#0093DD"  
             android:gravity="center"  
             android:textSize="18sp"        
             android:layout_width="wrap_content"
             android:layout_height="50dp"/>
        
         
    </LinearLayout>

</com.vcans.tool.SildingFinishLayout>