<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <!--  
    <ListView android:id="@+id/android:list"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_width="match_parent">
    </ListView>-->
    <include
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />

    <LinearLayout
        android:id="@+id/layCheckStatus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvCheckStatus"
            style="@style/txtTitle"
            android:layout_width="110dp"
            android:text="@string/CheckStatus" />

        <Spinner
            android:id="@+id/dropCheckStatus"
            style="@style/txtStyle"
            android:layout_width="130dp" />

        <Button
            android:id="@+id/btnClearRZFactoryId"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layFabricQuality"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvFabricQuality"
            style="@style/txtTitle"
            android:layout_width="110dp"
            android:text="@string/mianliao" />

        <Spinner
            android:id="@+id/dropFabricQuality"
            style="@style/txtStyle"
            android:layout_width="130dp" />

        <Button
            android:id="@+id/btnClearRZFactoryId0"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layKGM"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvKGM"
            style="@style/txtTitle"
            android:layout_width="110dp"
            android:text="@string/KGM" />

        <EditText
            android:id="@+id/txtKGM"
            style="@style/txtStyle"
            android:layout_width="130dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnClearRZFactoryId01"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>
    
    <LinearLayout
        style="@style/txtLinerLayout" >

        <TextView
            android:id="@+id/tvPiCi"
            style="@style/txtTitle" 
            android:layout_width="110dp"
            android:text="@string/pici" />

        <EditText
            android:id="@+id/txtPiCi"
            style="@style/txtStyle"
            android:layout_width="120dp" />

        <Button
            android:id="@+id/btnClearUser"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>

    <include
        android:id="@+id/inNext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/next" />

</LinearLayout>