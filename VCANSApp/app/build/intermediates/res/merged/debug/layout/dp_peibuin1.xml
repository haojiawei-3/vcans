<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <!--  
    <ListView android:id="@+id/android:list"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_width="match_parent">
    </ListView>-->
    <include
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />
 
    <LinearLayout
        android:id="@+id/layPackQuality"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvPackQuality"
            style="@style/txtTitle"
            android:layout_width="90dp"
            android:text="@string/baozhuang" />

        <Spinner
            android:id="@+id/dropPackQuality"
            style="@style/txtStyle"
            android:layout_width="130dp" />

        <Button
            android:id="@+id/btnClearRZFactoryId"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layFabricQuality"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvFabricQuality"
            style="@style/txtTitle"
            android:layout_width="90dp"
            android:text="@string/mianliao" />

        <Spinner
            android:id="@+id/dropFabricQuality"
            style="@style/txtStyle"
            android:layout_width="130dp" />

        <Button
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layMaKou"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvMaKou"
            style="@style/txtTitle"
            android:layout_width="88dp"
            android:text="@string/makou"
             />

        <EditText
            android:id="@+id/txtMaKou"
            style="@style/txtStyle"
            android:layout_width="131dp" 
            android:inputType="numberDecimal"/>

        <Button
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout> 
    
    <LinearLayout
         android:id="@+id/layRemark"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRemark"
            style="@style/txtTitle"
            android:layout_width="86dp"
            android:text="@string/remark" />

        <EditText
            android:id="@+id/txtRemark"
            style="@style/txtStyle"
            android:layout_width="135dp" />

        <Button
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout> 
  

   <include
        android:id="@+id/inNext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/next" />

</LinearLayout>