<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <include
      
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />

    <LinearLayout
      
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/textView1"
            style="@style/txtTitle"
            android:layout_width="50dp"
            android:src="@drawable/user" />

        <Spinner
            android:id="@+id/dropUser"
            style="@style/txtStyle"
            android:layout_width="160dp" />

        <Button
            android:id="@+id/btnLoadUser"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:text="+"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
      
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/textView10"
            style="@style/txtTitle"
            android:layout_width="50dp"
            android:src="@drawable/pwd" />

        <EditText
            android:id="@+id/txtPwd"
            style="@style/txtStyle"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnClearPwd"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chkSavePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="@string/chk_save_pwd"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <CheckBox
            android:id="@+id/chkAutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:enabled="false"
            android:text="@string/autoLogin"
            android:textColor="@android:color/black"
            android:textSize="12dp" />

        <LinearLayout
      
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvForgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:text="@string/forget_pwd"
                android:textColor="#6666FF"
                android:textSize="12dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
      
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="bottom|center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style"
            android:text="@string/btn_login"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>