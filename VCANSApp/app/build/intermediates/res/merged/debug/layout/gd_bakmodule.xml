<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <include
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />

    <LinearLayout
       
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tvBakType"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="备用类型" />

        <Spinner
            android:id="@+id/dropBakType"
            style="@style/txtStyle"
            android:text="选项1"
            android:layout_width="130dp" />

        <Button
            android:id="@+id/btnClearRZFactoryId"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:text="X"
            android:background="@null"
            android:visibility="invisible"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
     
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDataItem1"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="备用数据1"/>

        <EditText
            android:id="@+id/txtDataItem1"
            android:layout_width="130dp"
            style="@style/txtStyle" />
        
        
         <include
            android:id="@+id/inQrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/qrcode" />
    </LinearLayout>
    
	<LinearLayout
     
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDataItem2"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="备用数据2"/>

        <EditText
            android:id="@+id/txtDataItem2"
            android:layout_width="130dp"
            style="@style/txtStyle" />
        
         <include
            android:id="@+id/inQrcode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/qrcode2" />
    </LinearLayout>
    
	<LinearLayout
     
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvBakDate"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="备用日期"/>

        <EditText
            android:id="@+id/txtBakDate"
            android:layout_width="130dp"
            style="@style/txtStyle"
            android:editable="false" />
        
         <Button
            android:id="@+id/btnClearRZFactoryId1"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:text="X"
            android:background="@null"
            android:visibility="invisible"
            android:textColor="@android:color/black" />
    </LinearLayout>
    
	<LinearLayout
       
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tvFuZhuData1"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="备用辅助1" />

        <Spinner
            android:id="@+id/dropFuZhuData1"
            style="@style/txtStyle"
            android:layout_width="130dp" />

        <Button
            android:id="@+id/btnLoadFz1"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:text="+"
            android:background="@null"
            android:visibility="visible"
            android:textColor="@android:color/black" />
    </LinearLayout>
    
	<LinearLayout
       
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgCusCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/contact_card">
            
        </ImageView>
    </LinearLayout>
    
	<LinearLayout
       
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

          <include
            android:id="@+id/inNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/next" />
          
        <include
            android:id="@+id/inSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            layout="@layout/save" />

      
    </LinearLayout>

</LinearLayout>