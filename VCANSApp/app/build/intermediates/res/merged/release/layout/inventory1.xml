<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:foreground="?android:attr/selectableItemBackground"

    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">


        <ImageView
            android:id="@+id/zt"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/animation_img1" />


        <TextView
            android:id="@+id/tweetName"
            style="@style/tweetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/zt"
            android:paddingLeft="10dp"
            android:text="Chad"

            />

        <TextView
            android:id="@+id/tweetText"
            style="@style/tweetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tweetName"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zt"
            android:paddingLeft="10dp"
            android:text="Hello world!"
            android:textColor="@android:color/darker_gray"


            />

        <TextView
            android:id="@+id/tweetText1"
            style="@style/tweetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tweetText"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zt"
            android:paddingLeft="10dp"
            android:text="Hello world!"
            android:textColor="@android:color/darker_gray"


            />

        <TextView
            android:id="@+id/tweetText2"
            style="@style/tweetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tweetText1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zt"
            android:paddingLeft="10dp"
            android:text="Hello world!"
            android:textColor="@android:color/darker_gray"


            />

        <View
            android:id="@+id/tweetDate"
            style="@style/tweetDate"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="74dp"
            android:background="@drawable/number_jia" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
