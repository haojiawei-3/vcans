<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.Vcan.activity">

    <include
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />

    <LinearLayout
    
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRZPlanId"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="@string/RZPlanId" />

        <EditText
            android:id="@+id/txtRZPlanId"
            style="@style/txtStyle"
            android:layout_width="128dp" />

        <include
            android:id="@+id/inQrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/qrcode" />
    </LinearLayout>

    <LinearLayout
  
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvRZFactoryId"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="@string/RZFactoryId" />

        <EditText
            android:id="@+id/txtRZFactoryId"
            style="@style/txtStyle"
            android:layout_width="130dp" />
 <!--   com.facebook.drawee.view.SimpleDraweeView -->
     <com.vcans.tool.GifView
        android:id="@+id/btnScanBarcode2"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        app:gif="@drawable/qrcode_scan"
        android:textColor="@android:color/black" /> 
    </LinearLayout>
    
    <LinearLayout
    
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvRZFactoryName"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="@string/RZFactoryName" />

        <EditText
            android:id="@+id/txtRZFactoryName"
            style="@style/txtStyle"
            android:layout_width="130dp" 
            android:editable="false"/>

         <Button
            android:id="@+id/btnLoadFactoryName"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_marginRight="5dp"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@null"
            android:text="+" 
            android:visibility="invisible"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
   		
        <TextView
            android:id="@+id/tvWorkProcess"
            style="@style/txtTitle"
            android:layout_width="103dp"
            android:text="@string/Gongxu" />

        <Spinner
            android:id="@+id/dropWorkProcess"
            style="@style/txtStyle"
            android:layout_width="130dp" />
        

        <Button
            android:id="@+id/btnClearUser"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:text="X"
            android:textColor="@android:color/black"
            android:visibility="invisible" />
    </LinearLayout>
    
   
    <include
        android:id="@+id/inNext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/next" />

</LinearLayout>