<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".DPRZTask3"
    xmlns:app="http://schemas.android.com/apk/res/com.Vcan.activity">
    <include
        android:id="@+id/include01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBYName7"
                    style="@style/txtTitle"
                    android:layout_width="103dp"
                    android:text="备用7" />

                <com.vcans.tool.ZDYzuhe
                    android:id="@+id/ZDYzuhe7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"></com.vcans.tool.ZDYzuhe>

                <Button
                    android:id="@+id/btnLoad1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="+"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBYName8"
                    style="@style/txtTitle"
                    android:layout_width="103dp"
                    android:text="备用8" />

                <com.vcans.tool.ZDYzuhe
                    android:id="@+id/ZDYzuhe8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"></com.vcans.tool.ZDYzuhe>

                <Button
                    android:id="@+id/btnLoad2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="+"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBYName9"
                    style="@style/txtTitle"
                    android:layout_width="103dp"
                    android:text="备用9" />

                <com.vcans.tool.ZDYzuhe
                    android:id="@+id/ZDYzuhe9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></com.vcans.tool.ZDYzuhe>

                <Button
                    android:id="@+id/btnLoad3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="+"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBYName10"
                    style="@style/txtTitle"
                    android:layout_width="103dp"
                    android:text="备用10" />

                <com.vcans.tool.ZDYzuhe
                    android:id="@+id/ZDYzuhe10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></com.vcans.tool.ZDYzuhe>

                <Button
                    android:id="@+id/btnLoad4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:text="+"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />
            </LinearLayout>

            <include
                android:id="@+id/inNext"
                layout="@layout/next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layInfoList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#99CCFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/wuliao"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
                        android:text="(0/1)"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/tvLoad"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:text="@string/btn_load"
                            android:textColor="#0000FF"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.vcans.tool.ListViewForScrollView
                        android:id="@+id/lvProdct"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.98"
                        android:choiceMode="singleChoice"
                        android:divider="@drawable/divider_liner"
                        android:dividerHeight="1dp"
                        android:drawSelectorOnTop="false"
                        android:listSelector="#FF9900"></com.vcans.tool.ListViewForScrollView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>